---
const base = import.meta.env.BASE_URL;
const links = [
    { href: `${base}/`, label: "Home" },
    { href: `${base}/#games`, label: "Games" },
    { href: `${base}/blog`, label: "Blog" },
    { href: `${base}/#about`, label: "About" },
];
---

<nav class="fixed w-full z-50 bg-slate-900/90 backdrop-blur-sm">
    <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
            <div class="flex items-center">
                <div class="w-8 h-8 bg-purple-600 rounded-full"></div>
                <span class="ml-2 text-xl text-white font-semibold">Cocoboko Studios</span>
            </div>
            <div class="hidden md:flex space-x-8">
                {links.map(link => (
                    <a 
                        href={link.href} 
                        class="text-gray-300 hover:text-white transition-colors"
                    >
                        {link.label}
                    </a>
                ))}
            </div>
            
            <!-- Mobile menu button -->
            <button class="md:hidden text-gray-300 hover:text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="hidden md:hidden">
        <div class="px-2 pt-2 pb-3 space-y-1">
            {links.map(link => (
                <a
                    href={link.href}
                    class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
                >
                    {link.label}
                </a>
            ))}
        </div>
    </div>
</nav>