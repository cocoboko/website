---
import Layout from './Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Newsletter from '../components/Newsletter.astro';
import Discussion from '../components/Discussion.astro';

interface Props {
    title: string;
    pubDate: Date;
    author: string;
    image?: {
        url: string;
        alt: string;
    };
    description: string;
    comments?: {
        discord?: string;
    };
}

const { title, pubDate, author, image, description, comments } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<Layout title={`${title} - Cocoboko Studios Blog`}>
    <Navigation />
    <main class="container mx-auto px-4 py-8 min-h-screen bg-slate-800 text-white pt-16">
        <article class="max-w-4xl mx-auto px-4 py-12">
            {image && (
                <img
                    src={image.url}
                    alt={image.alt}
                    class="w-full h-[400px] object-cover rounded-lg mb-8"
                />
            )}
            <h1 class="text-4xl font-bold mb-4">{title}</h1>
            <div class="text-gray-400 mb-8">
                <time datetime={pubDate.toISOString()}>
                    {new Date(pubDate).toLocaleDateString('en-us', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                    })}
                </time>
                <span class="mx-2">â€¢</span>
                <span>{author}</span>
            </div>
            <div class="prose prose-lg max-w-none prose-invert prose-p:text-gray-300 prose-headings:text-white prose-a:text-purple-400 hover:prose-a:text-purple-300">
                <slot />
            </div>
            <hr class="my-12 border-t-2 opacity-70" />
            <Discussion url={comments?.discord} />
        </article>
    </main>
    <Footer />
</Layout>
